<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="0">
            <group id="switro_cryptopayments" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Switro Solana/ETH Wallet</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1">
                    <label>Title</label>
                    <comment>Title shown on storefront</comment>
                </field>
                <field id="description" translate="label" type="textarea" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>Description</label>
                </field>
                <field id="api_key" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1">
                    <label>API Key</label>
                </field>
                <field id="network" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1">
                    <label>Network</label>
                    <source_model>Switro\CryptoPayments\Model\System\Config\Source\Network</source_model>
                </field>
                <field id="webhook_url" translate="label" type="label" sortOrder="60" showInDefault="1" showInWebsite="1">
                    <label>Webhook URL</label>
                    <comment>Register this URL in your Switro dashboard</comment>
                </field>
            </group>
        </section>
    </system>
</config>
